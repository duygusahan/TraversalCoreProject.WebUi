
@model List<TraversalCoreProject.DtoLayer.Dtos.AnnouncementDtos.ResultAnnouncementDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="card">
    <h5 class="card-header">Duyurular</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Tur Detayları</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                        <td>@item.Title</td>
                        
                        <td>@item.Content.Substring(0,20) ...</td>

                        
                        <td>
                            <a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-danger">Sil</a>
                        </td>

                        <td>
                            <a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-primary">Güncelle</a>
                        </td>

                        <td>
                            <a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-warning">Detay</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>

        
    </div>
    
</div>
<br />
<a href="/Admin/Announcement/AddAnnouncement" class="btn btn-dark">Duyuru Ekle</a>