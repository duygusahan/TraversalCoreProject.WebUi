@model List<TraversalCoreProject.EntityLayer.Concrete.Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Tur Rotaları</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>İşlemler</th>
                    
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
               
                @foreach(var item in Model)
                {
                    count++;
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                        <td>@item.TourName</td>
                        <td>
                            @item.Price ₺
                        </td>
                        <td>
                            @item.Capacity
                        </td>
                        
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Destination/DestinationDetails/@item.DestinationId"><i class="bx bx-show me-1"></i>Sitede Gör</a>
                                    <a class="dropdown-item" href="/Admin/Destination/DeleteDestination/@item.DestinationId"><i class="bx bx-trash me-1"></i> Sil</a>
                                    <a class="dropdown-item" href="/Admin/Destination/UpdateDestination/@item.DestinationId"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                                    <a class="dropdown-item" href="/Admin/Destination/DestinationDetails/@item.DestinationId"><i class="bx bx-info-circle me-1"></i> Detayları Gör</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
             
                
            </tbody>
        </table>
       
      
    </div>
</div>
 <br />
<a href="/Admin/Destination/AddDestination" class="btn btn-primary">Yeni Rota Ekleyin</a>