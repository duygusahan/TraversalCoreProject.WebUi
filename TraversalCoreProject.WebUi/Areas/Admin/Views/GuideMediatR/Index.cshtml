@using TraversalCoreProject.WebUi.CQRS.Results.GuideResults
@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">CQRS - MediatR İle Tur Rehberleri</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rehberin Adı</th>
                    <th>Hakkında</th>
                    <th>Görseli</th>
                    <th>İşlemler</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                        <td>@item.Name</td>
                        <td>
                            @item.Description.Substring(0,80)...
                        </td>
                     
                        <td><img src="@item.ImageUrl" style="width:75px ; height:75px" /></td>
                        

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">

                                    <a class="dropdown-item" href="/Admin/GuideMediatR/DeleteDestination/@item.GuideId"><i class="bx bx-trash me-1"></i> Sil</a>
                                    <a class="dropdown-item" href="/Admin/GuideMediatR/GetGuide/@item.GuideId"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>

                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>


    </div>
</div>
<br />
<a href="/Admin/GuideMediatR/AddGuide" class="btn btn-primary">Yeni Rota Ekleyin</a>

