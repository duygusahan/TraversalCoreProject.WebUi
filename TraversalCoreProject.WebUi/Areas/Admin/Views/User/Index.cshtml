@model List<TraversalCoreProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Kullanıcılarımız</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>AD SOYAD</th>
                    <th>KULLANICI ADI</th>
                    <th>MAIL</th>
                    <th>YORUMLARI</th>
                    <th>TUR GEÇMİŞİ</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                   
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Id</strong></td>
                        <td>@item.Name @item.Surname</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>

                        <td>
                            <a href="#" class="btn btn-dark">Yorum</a>
                        </td>
                        <td>
                            <a href="/Admin/User/UserReservations/@item.Id" class="btn btn-danger">Katıldığı Turlar</a>
                        </td>

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                  
                                    <a class="dropdown-item" href="#"><i class="bx bx-trash me-1"></i> Sil</a>
                                    <a class="dropdown-item" href="#"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                    
                                </div>
                            </div>
                        </td>
                    </tr>
                }

                
            </tbody>
        </table>
       
    </div>
</div>
<br />
<a href="/Login/SignUp/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
