@model List<TraversalCoreProject.EntityLayer.Concrete.Reservation>
@{
    ViewData["Title"] = "UserReservations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Kullanıcının Geçmiş Rezarvasyonları</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>KULLANICI ADI</th>
                    <th>ROTA</th>
                    <th>KİŞİ SAYISI</th>
                    <th>TARİH</th>
                    <th>DETAYLAR</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@count</strong></td>
                        <td>@item.AppUser.UserName </td>
                        <td>@item.Destination.TourName</td>
                        <td>@item.PersonCount</td>
                        <td>@item.ReservationDate.ToShortDateString()</td>

                        
                        <td>
                            <a href="#" class="btn btn-danger">Detaylar</a>
                        </td>

                        
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>

