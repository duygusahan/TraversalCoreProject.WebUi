@using TraversalCoreProject.EntityLayer.Concrete
@model List<Destination>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Rotalarımız</h6>
            <p class="text-sm">Aktif Tur Rotalarımız</p>
        </div>
        <div class="card-body p-3">
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="@item.CoverImageUrl" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl" style="height:260px" ; width="500px" >
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">@item.DayNight</p>
                                <a href="javascript:;">
                                    <h5>
                                        @item.City
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    @item.Description
                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <button type="button" class="btn btn-outline-primary btn-sm mb-0">İncele</button>
                                   
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>
                }
               
                
            </div>
        </div>
    </div>
</div>