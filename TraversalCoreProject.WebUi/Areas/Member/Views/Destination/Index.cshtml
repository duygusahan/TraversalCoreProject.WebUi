@using TraversalCoreProject.EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="app-content content">
	<div class="content-wrapper">
		<div class="content-wrapper-before"></div>
		<div class="content-header row">
			<div class="content-header-left col-md-4 col-12 mb-2">
				<h3 class="content-header-title">Birbirinden Keyifli Tur Rotalarımızı İnceleyin</h3>
			</div>
			<div class="content-header-right col-md-8 col-12">
				<div class="breadcrumbs-top float-md-right">
					<div class="breadcrumb-wrapper mr-1">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="index.html">Ana Sayfa</a>
							</li>
							<li class="breadcrumb-item active">
								Rotalarımız
							</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
		<div class="content-body">
			
			<section id="header-footer">
				<div class="row match-height">
					@foreach(var item in Model)
					{
						<div class="col-lg-4 col-md-12">
							<div class="card">
								<div class="card-body">
									<h4 class="card-title">@item.TourName</h4>
									<h6 class="card-subtitle text-muted">@item.Description</h6>
								</div>
								<img class="" src="@item.CoverImageUrl" alt="Card image cap" style="height:260px" ; width="377px">
								<div class="card-body">
									<p class="card-text">@item.City</p>
									
								</div>
								<div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
									<span class="float-left">@item.DayNight / @item.Price ₺</span>
									<span class="float-right">
										<a href="#" class="card-link">
											Turu İncele
											<i class="la la-angle-right"></i>
										</a>
									</span>
								</div>
							</div>
						</div>
					}
					
					
				</div>
			</section>
		
		</div>
	</div>
</div>