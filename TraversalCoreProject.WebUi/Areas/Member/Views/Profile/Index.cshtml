@model TraversalCoreProject.WebUi.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}


<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Profilim</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html">Ana Sayfa</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Profil Ayarları
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Tables start -->

            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Profilinizi Düzenleyin</h4>
                        </div>
                        <div class="card-block">
                            <div class="card-body">
                                <form method="post" enctype="multipart/form-data">
                                    @Html.Label("Adınız")
                                    <input type="text" asp-for="name" class="form-control" />
                                    <br />

                                    @Html.Label("Soyadınız")
                                    <input type="text" asp-for="surname" class="form-control" />
                                    <br />

                                    @Html.Label("Mail Adresiniz")
                                    <input type="text" asp-for="mail" class="form-control" />
                                    <br />

                                    @Html.Label("şifreniz")
                                    <input type="text" asp-for="password" class="form-control" />
                                    <br />

                                    @Html.Label("Şifre Tekrar")
                                    <input type="text" asp-for="confirmpassword" class="form-control" />
                                    <br />

                                    <div class="form-group">
                                        <input type="file" asp-for="image" />
                                    </div>
                                    <br />

                                    <button class="btn btn-primary">Bilgileri Güncelle</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>