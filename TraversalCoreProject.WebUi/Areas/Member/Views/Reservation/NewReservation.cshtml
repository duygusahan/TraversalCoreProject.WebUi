@model TraversalCoreProject.EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}




<div class="app-content content">
	<div class="content-wrapper">
		<div class="content-wrapper-before"></div>
		<div class="content-header row">
			<div class="content-header-left col-md-4 col-12 mb-2">
				<h3 class="content-header-title">Rezervasyonlarım</h3>
			</div>
			<div class="content-header-right col-md-8 col-12">
				<div class="breadcrumbs-top float-md-right">
					<div class="breadcrumb-wrapper mr-1">
						<ol class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="index.html">Ana Sayfa</a>
							</li>
							<li class="breadcrumb-item active">
								Rezarvasyonlarım
							</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
		<div class="content-body">
			<!-- Basic Tables start -->

            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Yeni Rezarvasyon Sayfası</h4>
                        </div>
                        <div class="card-block">
                            <div class="card-body">
                                <form method="post">
                                    <div class="form-group">
                                        @Html.Label("Lokasyon")
                                        @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Kişi Sayısı")
                                        <input type="text" asp-for="PersonCount" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Tarih")
                                        <input type="date" asp-for="ReservationDate" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Varsa Eklemek İstedikleriniz")
                                        <input type="text" asp-for="Description" class="form-control" />
                                    </div>

                                    <button class="btn btn-info">Rezarvasyon Yap</button>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
			
		</div>
	</div>
</div>