@model TraversalCoreProject.WebUi.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							
							<h3>Bir Hesap Oluşturun </h3>
							<p>
								Hayalinizdeki yurt dışı tatili, sadece bir tık uzağınızda! Şimdi kaydolun ve unutulmaz maceralarınızı planlamaya başlayın. Düşlerinizdeki egzotik plajlardan tarihi şehir turlarına, lezzet dolu gastronomi deneyimlerinden kültürel keşiflere kadar her şey burada sizi bekliyor. Hayallerinizi gerçeğe dönüştürmek için adım atın ve hayatınızı renklendirecek bu eşsiz yolculuklara davet edin!
							</p>
							<a href="index.html" class="read-more-1 btn">Siteye geri dön</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Üye Ol</h4>
						<p>Hemen ücretsiz bir hesap oluşturun :)</p>
					</div>
					<form  method="post" class="signin-form">
						<div class="form-input">
							<label>Adınız</label>
							<input type="text"    asp-for="Name"/>
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text"  asp-for="Surname" />
							<span asp-validation-for="Surname" class="text-danger"></span>
						</div>

						<div class="form-input">
							<label>Kullanıcı Adınız</label>
							<input type="text"  asp-for="Username" />
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>

						<div class="form-input">
							<label>Kullanıcı Görsel Url iniz</label>
							<input type="text" asp-for="ImageUrl" />
							<span asp-validation-for="ImageUrl" class="text-danger"></span>
						</div>

						

						<div class="form-input">
							<label>Email</label>
							<input type="email"   asp-for="Mail"/>
							<span asp-validation-for="Mail" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifreniz</label>
							<input type="password" asp-for="Password"  />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<div class="form-input">
							<label>Şifre Tekrar</label>
							<input type="password" asp-for="ConfirmPassword"  />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>

						<label class="container">
						 <a href="#">Şartları okudum</a> kabul ediyorum. <a href="#"></a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Kayıt Ol</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Invent Signup. All rights reserved | Design by
							<a href="http://w3layouts.com/" target="_blank">W3layouts</a>
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>