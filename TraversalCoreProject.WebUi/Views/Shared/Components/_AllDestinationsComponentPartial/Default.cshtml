@model List<TraversalCoreProject.EntityLayer.Concrete.Destination>


<style>
    .carousel-item img {
        width: 100%;
        height: 469px;
        object-fit: cover;
    }
</style>

<div class="col-xl-4 col-lg-12">
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <h4 class="card-title">Rotalarımız</h4>
                <h6 class="card-subtitle text-muted">Birbirinden Keyifli Aktif Seyahat Rotalarımız </h6>
            </div>
            <div id="imageSlider" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li data-target="#imageSlider" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>

                <!-- Carousel Items -->
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        var activeClass = i == 0 ? "active" : "";
                        <div class="carousel-item @activeClass">
                            <img src="@item.ImageUrl" class="d-block img-fluid" alt="Image @i">
                        </div>
                    }
                </div>

                <!-- Controls -->
                <a class="carousel-control-prev" href="#imageSlider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageSlider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
        </div>
        <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
            <span class="float-left">2 days ago</span>
            <span class="tags float-right">
                <span class="badge badge-pill badge-primary">Branding</span>
                <span class="badge badge-pill badge-danger">Design</span>
            </span>
        </div>
    </div>
   
</div>

