@model List<TraversalCoreProject.EntityLayer.Concrete.Destination>


<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Turlarımız</h3>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4 col-6">
                        <div class="column">
                            <a href="/Destination/DestinationDetails/@item.DestinationId"><img src="@item.ImageUrl" alt="" class="img-fluid" style="width:400px ; height:400px"></a>
                            <div class="info">
                                <h4><a href="blog-single.html">@item.TourName</a></h4>
                                <p>@item.DayNight</p>
                                <div class="dst-btm">
                                    <h6 class="">Başlayan Fiyatlarla</h6>
                                    <span>@item.Price</span>
                                </div>
                                <div class="dst-btm">
                                    <h6 class="">Şehirler</h6>
                                    <span>@item.Description</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</section>